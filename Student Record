#include<time.h>
#include<iostream>
using namespace std;

class record {

private:	
	time_t now;
	struct tm *tm_now;

public:
	record() {};
	void diplay() {
		time(&now);
		tm_now = localtime(&now);
		cout << "*******************************************************************************************************************" << endl;
		cout << "datetime:" << tm_now->tm_year + 1900 << "-" << tm_now->tm_mon + 1 << "-" << tm_now->tm_mday << "  " << tm_now->tm_hour << ":" << tm_now->tm_min << ":" << tm_now->tm_sec << endl;
		cout << "_______________________________________________________________________________________________________________________________________________" << endl;
		cout << "|	Monday	|	Tuesday	  |   Wednesday  |	Thursday  |   Friday   |    Saturday   |   Sunday   |      " << endl;

	}
	void booking() {

	}
	void cancelbooking() {

	}
};

int main() {
	record a;
	int i;
	    cout <<"**********************Booking system **************************" << endl;
	do {
		cout << "1.Display the Schedul                  2.Booking for the appointmen" << endl;
		cout << "3.Cancel the appointment               0.Exit the booking system" << endl;
		cout << "  ****************************************************************************" << endl;
		cout << "Please inputs the number:" << endl;
		cin >> i;
		if (i<0 ||i>7) i = 0;
		switch (i)
		{
		case 1: a.diplay();
			break;
		case 2: a.booking();
			break;
		case 3: a.cancelbooking();
			break;
		case 0:
			break;
		}
	} while (i != 0);
	cout << "Thanks for using this system!" << endl;
	return 0;
}
